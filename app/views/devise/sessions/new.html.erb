
<html>
<head>
  <title>Department Phonebook</title>
	<%= stylesheet_link_tag    "style" %>
	<%= stylesheet_link_tag    "login" %>		
	<%= csrf_meta_tags %>
</head>
<body class="home blog">
	<div class="login">

		<a id="logo" href="<%= root_path %>">
			Department Phonebook
		</a>
		
		<% flash.each do |key, value| %>
			<br>
			<div class="alert alert-<%= key %>" id="alert-flash"><%= value %>
			</div>
		
		<% end %>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		
		<%= devise_error_messages! %>
		
			<div><%= f.email_field :email, :placeholder => "Email", :class => "input" %></div>
			<div><%= f.password_field :password, :placeholder => "Password", :class => "input" %></div>

			<% if devise_mapping.rememberable? -%>
				<div>
					<%= f.check_box :remember_me %> <%= f.label :remember_me %>
				</div>
			<% end %>
			
			<div><%= f.submit "Sign in", :class => "submit" %></div>			
		
		<% end %>
		<%= render "devise/shared/links" %>
		
	</div>
</body>
</html>
