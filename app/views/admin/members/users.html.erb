	<div class="span12">
		<section id="wizard">
			<div id="rootwizard">
				<div class="navbar">
				  <div class="navbar-inner">
					    <div class="container">
							<ul>
	  
								<li><a href="#tab1" data-toggle="tab">Not-Approved Users</a></li>
								<li><a href="#tab2" data-toggle="tab">Approved Users</a></li>
								<li><a href="#tab3" data-toggle="tab">Users</a></li>
								
							</ul>
	 					</div>
	  				</div>
				</div>
				<div class="tab-content">

	    			<div class="tab-pane" id="tab1">
	     				<table class= "table">
			 			 	<tr>
