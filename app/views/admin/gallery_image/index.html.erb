<html>

  <title>Department Phonebook</title>
  	<%= stylesheet_link_tag    "admin/admin" %>
	<%= javascript_include_tag  "admin/admin" %>
	<%= yield :scripts %> 
	<%= stylesheet_link_tag 'gmaps4rails' %>
	<%= csrf_meta_tags %>
	<style type="text/css">

header .menu{
	    line-height: 40px; background-color: #EEEEEE; text-align: center; margin: 5px; border-radius: 3px 3px 3px 3px; font-weight: bold;
	}
	header .menu:hover{
	    background-color: #E0E0DF;
	}   
	.padding10{
	    padding: 10px;      
	}
	.padding15{
	    padding: 15px;      
	}
	.padding5{
	    padding: 5px;
	}
	.height35{
	    height: 35px;
	}
	.lineheight25{
	    line-height: 25px;
	}


	

.photo-grid {
	margin: 1em auto;
	max-width: 1106px;
	text-align: center;
}
 
.photo-grid li {
	
	display: inline-block;
	margin: 1em;
	width: 289px;
}
 
.photo-grid img {
	display: block;
	height: auto;
	max-width: 100%;
}
 
.photo-grid figure {
	height: 163px;
	overflow: hidden;
	position: relative;
	width: 289px;
}
 
.photo-grid figcaption {
	background: rgba(0,0,0,0.8);
	color: white;
	display: table;
	height: 100%;
	left: 0;
	opacity: 0;
	position: absolute;
	right: 0;
	top: 0;
	z-index: 100;
}
 
.photo-grid figcaption p {
	display: table-cell;
	font-size: 1.5em;
	position: relative;
	top: -40px;
	width: 289px;
	vertical-align: middle;
}


.photo-grid li:hover figcaption {
	opacity: 1;
}
.photo-grid img {
	display: block;
	height: auto;
	-webkit-transition: all 300ms;
	-moz-transition: all 300ms;
	transition: all 300ms;
	max-width: 100%;
}
 
.photo-grid li:hover img {
	-webkit-transform: scale(1.4);
	-moz-transform: scale(1.4);
	transform: scale(1.4);
}

.photo-grid figcaption p {
	display: table-cell;
	font-size: 1.5em;
	position: relative;
	top: -40px;
	width: 289px;
	-webkit-transition: all 300ms ease-out;
	-moz-transition: all 300ms ease-out;
	transition: all 300ms ease-out;
	vertical-align: middle;
}
 
.photo-grid li:hover figcaption p {
	-moz-transform: translateY(40px);
	-webkit-transform: translateY(40px);
	transform: translateY(40px);
}

.photo-grid figcaption {
	background: rgba(0,0,0,0.8);
	color: white;
	display: table;
	height: 100%;
	left: 0;
	opacity: 0;
	position: absolute;
	right: 0;
	top: 0;
	-webkit-transition: all 300ms;
	-moz-transition: all 300ms;
	transition: all 300ms;
	-webkit-transition-delay: 100ms;
	-moz-transition-delay: 100ms;
	transition-delay: 100ms;
	z-index: 100;
}


	</style>
</head>
<body class="blog">
	<%= render 'admin/header' %> 
	<div style="margin-left: 30px; margin-right: 30px;">
	<br>	
		<% unless @page_caching %>	
			<% flash.each do |key, value| %>
				<br>
				<div class="alert alert-<%= key %>" id="alert-flash"><%= value %>
					<a class="close" data-dismiss="alert" href="#">&times;</a>
				</div>
				
			<% end %>
		<% end %>
		<%= yield %>
</div>

<div style="margin-left: 30px; margin-right: 30px;">
			
			<div class="row">
			<div class="span6" >
			 <h1>Your Photo Gallery</h1>
			</div>	
			<div class="span6" style="text-align:right">
			<!--  <a class="btn" href="gallery_image/new">Upload Image</a> -->
			<a class="btn" data-toggle="modal" href="#myModal" >Upload Image</a>
			</div>	
			</div>

<%= will_paginate @images %>
<ul class="photo-grid">
 <% @images.each do |images|%>
 <% if !images.photo.blank? %>
	<li>
		<a href="gallery_image/<%=images.id%>" data-method="delete">
			<figure>
				<img src='<%=images.photo%>' height="180" width="320" alt="Arc de Triomphe">
				<figcaption><p>Click to Delete Image</p></figcaption>
			</figure>
		</a>
	</li>
	<% end %>
	<%end%>
	</ul>
</div>

</body>
</html>




<div class="modal hide" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Upload Image</h3>
  </div>
  <div class="modal-body" style="margin-left:30px;">
   <% @images=GalleryImage.new %>
   <%= form_for :images, :html => {:controller => :gallery_image, :multipart => true , :method =>:post},:url => {:action => :create} do |c| %>
    <table>
			<tr>
				<td style="padding:5px"><%= c.label :photo, :required => true %></td>
				<td></td>
					<td style="padding:5px"><%= c.file_field :photo, :required => true %></td>
			
				</tr>
				<tr>
					<td style="padding:5px" colspan="3"><%= c.submit "Upload Image" %></td>
				</tr>
			
	</table>
   <% end %>
  </div>
  
</div>
