
		
		<%= form_for @department, :html => { :multipart => true }, :url => admin_departments_path do |c|%>

			<%= c.label :name %>
			<%= c.text_field :name, :autofocus => true, :class => "height35 padding5 span5" %>

			<br>
			<input type="button" value="Save" class="padding10" onclick="document.forms['new_department'].submit();">
			<input type="button" value="Cancel" class="padding10" onclick="window.location.href='/admin/departments'">
			
		<% end %>
