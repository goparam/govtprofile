		<div class="row">
			<div class="span6">
				<h1><%= @title %></h1>
				<p><%= @desc %></p>
			</div>
			<div class="span6">
				<input type="button" value="Add New" class="padding10" onclick="window.location.href='/admin/grs/new';">
			</div>
		</div>
		<br>

		<table class= "table">
				<tr>
					<th class="span1">Id
					<th class="span2">Name
					<th class="span6">Details
					<th class="span2">Unique Code
					<th class="span2">Department
					<th class="span1">GR Date
					<th class="span1">File Size (KB)
					<th class="span2">Actions
				</tr>	
			<% @grs.each do |c| %>
				<tr style="font-size: 12px;"><td><%= c.id %>
					<td><%= c.name %>
					<td><%= c.details.html_safe %>					
					<td><%= c.unique_code rescue "" %>
					<td><%= c.department.name.titlecase rescue "" %> 
					<td><%= c.gr_date.strftime("%d-%b-%Y") rescue "" %>					
					<td><%= c.document_file_size rescue "" %>
					<td><%= link_to image_tag("/assets/edit.png"), edit_admin_gr_path(c) , :method => :get %> &nbsp 
						<%= link_to image_tag("/assets/delete.png"), admin_gr_path(c), :method => :delete, :class =>"delete_#{c.id}", :remote => :true, :confirm => 'Are you sure?' %> &nbsp
						<% unless c.document_file_name.blank? %>
							<%= link_to "<img src='/assets/1368534643_save.png' height=20px width=20px>".html_safe, c.document.url(:download => true), :target => "_blank" %>
						<% end %>
				</tr>
			<% end %>
		</table>